<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.budget.buddy" >

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SplashActivity"
            android:clearTaskOnLaunch="true"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name=".NewBudgetActivity"
            android:label="@string/title_activity_new_budget"
            android:parentActivityName=".HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.budget.buddy.HomeActivity" />
        </activity>
        <activity
            android:name=".SharesActivity"
            android:label="@string/title_activity_new_budget"
            android:parentActivityName=".HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.budget.buddy.HomeActivity" />
        </activity>
        <activity
            android:name=".WelcomeActivity"
            android:label="@string/title_activity_welcome" >
        </activity>
        <activity
            android:name=".AddBudgetItemActivity"
            android:label="@string/title_activity_add_budget_item"
            android:parentActivityName=".SingleBudgetActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.budget.buddy.SingleBudgetActivity" />
        </activity>
        <activity
            android:name=".SingleBudgetActivity"
            android:label="@string/title_activity_single_budget"
            android:parentActivityName=".HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.budget.buddy.HomeActivity" />
        </activity>
        <activity
            android:name=".EditBudgetActivity"
            android:label="@string/title_activity_single_budget"
            android:parentActivityName=".SingleBudgetActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.budget.buddy.HomeActivity" />
        </activity>
        <activity
            android:name=".ShareBudgetActivity"
            android:label="@string/title_activity_share_budget"
            android:parentActivityName=".SingleBudgetActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.budget.buddy.SingleBudgetActivity" />
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_profile"
            android:parentActivityName=".HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.budget.buddy.HomeActivity" />
        </activity>
        <activity
            android:name=".BudgetHistoryActivity"
            android:label="@string/title_activity_budget_history"
            android:parentActivityName=".SingleBudgetActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.budget.buddy.SingleBudgetActivity" />
        </activity>
        <activity
            android:name=".BudgetHistoryDetailsActivity"
            android:label="@string/title_activity_budget_history_details"
            android:parentActivityName=".BudgetHistoryActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.budget.buddy.BudgetHistoryActivity" />
        </activity>
        <activity
            android:name=".SingleBudgetDetailActivity"
            android:label="@string/title_activity_single_budget_detail"
            android:parentActivityName=".SingleBudgetActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.budget.buddy.SingleBudgetActivity" />
        </activity>
    </application>

</manifest>
